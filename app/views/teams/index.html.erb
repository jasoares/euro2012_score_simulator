<h2>Listing teams</h2>

<table>
  <tr>
    <th>Flag</th>
    <th>Name</th>
    <th>Group</th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= image_tag "#{team.name.downcase.gsub(" ", "_")}.gif", { :height => 25, :width => 50 } %></td>
    <td><%= team.name %></td>
    <td><%= team.group %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

