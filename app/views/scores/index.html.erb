<h1>Listing scores</h1>

<table>
  <tr>
    <th>Home</th>
    <th>Away</th>
    <th>H score</th>
    <th>A score</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scores.each do |score| %>
  <tr>
    <td><%= score.home_team %></td>
    <td><%= score.away_team %></td>
    <td><%= score.h_score %></td>
    <td><%= score.a_score %></td>
    <td><%= score.group %></td>
    <td><%= link_to 'Show', score %></td>
    <td><%= link_to 'Edit', edit_score_path(score) %></td>
    <td><%= link_to 'Destroy', score, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

